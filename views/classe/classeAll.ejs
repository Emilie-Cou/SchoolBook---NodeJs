<%- include ('../parts/head') %>

<body>
    <nav>
        <%- include ('../parts/nav') %>
    </nav>

    <h1>Les classes</h1>
    
    <ul class="afficheAll">
        <% classes.forEach( cls => { %>
            <li>
                <a href="/classes?id=<%= cls.id %>">
                    <div class="afficheAllDiv">
                        <h3><%= cls.nom %></h3>
                        <p>Professeur: <%= cls.nomProf %></p>
                        <p><%= cls.miniDesc %></p>
                        <h2>En voici une photo</h2>
                        <img src='data:image/jpeg;base64, <%= cls.img %>' alt="Ecole du bas" width="300">
                    </div>
                </a>
            </li>
        <% }) %>
    </ul>
    

    <footer>
        <%- include ('../parts/footer'); %>
    </footer>
    
</body>
</html>